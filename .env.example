# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/crypto-hub-db?retryWrites=true&w=majority

# Server Configuration
PORT=3000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Multi-channel support: Use comma-separated channel IDs for broadcasting to multiple channels
# Example: TELEGRAM_CHANNEL_ID=-1001234567890,-1009876543210
# Single channel: TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_CHANNEL_ID=your_channel_id_here
ADMIN_TELEGRAM_ID=your_admin_telegram_id_here

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.8
GEMINI_MAX_TOKENS=500

# Crypto deposit addresses (on-chain / token addresses)
CRYPTO_USDT_ADDRESS=0xYourTetherUSDTAddressHere
CRYPTO_BTC_ADDRESS=bc1qyourbtcaddresshere

# Public crypto APIs
COINGECKO_BASE=https://api.coingecko.com/api/v3
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Mobile money contact numbers (use E.164 format)
# Example for Kenya M-Pesa: 254XXXXXXXXX
MPESA_NUMBER_KE=254XXXXXXXXX

# Airtel numbers (Uganda, Malawi or region-specific)
AIRTEL_NUMBER_UG=2567XXXXXXXX
AIRTEL_NUMBER_MW=2657XXXXXXXX

# Optional fallback / operator label mapping
DEFAULT_PAYMENT_COUNTRY=KE

# Base URL for CTA links
BASE_URL=https://crypto.loopnet.tech
